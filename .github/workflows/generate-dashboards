name: Generate Dashboards

on:
  schedule:
    # Run every day at 6 AM UTC (adjust time as needed)
    - cron: '0 6 * * *'
  workflow_dispatch:  # Allows manual trigger from GitHub Actions tab
  push:
    branches:
      - main
    paths:
      - 'scripts/generate_reports.py'

jobs:
  generate-reports:
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout repository
      uses: actions/checkout@v3
      
    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.10'
        
    - name: Install dependencies
      run: |
        sudo apt-get update
        sudo apt-get install -yq fonts-liberation fonts-noto-naskh-arabic libasound2 libatk-bridge2.0-0 libatk1.0-0 libatspi2.0-0 libcairo2 libcups2 libdbus-1-3 libdrm2 libgbm1 libgtk-3-0 libnspr4 libnss3 libpango-1.0-0 libx11-6 libx11-xcb1 libxcb1 libxcomposite1 libxcursor1 libxdamage1 libxext6 libxfixes3 libxi6 libxrandr2 libxrender1 libxss1 libxtst6
        pip install gspread pyppeteer nest_asyncio pandas google-auth google-auth-oauthlib google-auth-httplib2
        
    - name: Create service account credentials file
      run: |
        echo '${{ secrets.GOOGLE_CREDENTIALS }}' > credentials.json
        
    - name: Run Python script
      env:
        SHEET_KEY: ${{ secrets.SHEET_KEY }}
      run: |
        python scripts/generate_reports.py
        
    - name: Move reports to login folder
      run: |
        mv HR_Report_*.html login/hr-dashboard.html || echo "HR report not found"
        mv Facilities_Report_*.html login/facilities-dashboard.html || echo "Facilities report not found"
        
    - name: Commit and push changes
      run: |
        git config --local user.email "github-actions[bot]@users.noreply.github.com"
        git config --local user.name "github-actions[bot]"
        git add login/*.html
        git diff --staged --quiet || git commit -m "Auto-update dashboards [skip ci]"
        git push
      env:
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
